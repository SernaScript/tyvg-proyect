generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Company {
  id        String    @id @default(cuid())
  nit       String    @unique
  name      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  invoices  Invoice[]

  @@map("companies")
}

model Invoice {
  id            String   @id @default(cuid())
  invoiceNumber String
  documentType  String
  issueDate     DateTime
  dueDate       DateTime?
  subtotal      Decimal  @db.Decimal(12, 2)
  tax           Decimal  @db.Decimal(12, 2)
  total         Decimal  @db.Decimal(12, 2)
  status        String   @default("pending")
  supplierName  String?
  supplierNit   String?
  description   String?
  observations  String?
  scrapedAt     DateTime @default(now())
  sourceFile    String?
  companyId     String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  company       Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  trips         Trip[]

  @@map("invoices")
}

model ScrapingLog {
  id               String   @id @default(cuid())
  companyNit       String
  startDate        DateTime
  endDate          DateTime
  status           String
  message          String?
  fileName         String?
  recordsFound     Int      @default(0)
  recordsProcessed Int      @default(0)
  recordsErrors    Int      @default(0)
  duration         Int?
  errorDetails     String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@map("scraping_logs")
}

model User {
  id                    String                @id @default(cuid())
  email                 String                @unique
  name                  String?
  password              String
  isActive              Boolean               @default(true)
  lastLogin             DateTime?
  createdAt             DateTime              @default(now())
  updatedAt             DateTime              @updatedAt
  roleId                String
  approvedLegalizations AdvanceLegalization[] @relation("AdvanceLegalizationApprover")
  attendedAlerts        Alert[]               @relation("AlertAttendee")
  driver                Driver?
  sessions              Session[]
  passwordResetTokens   PasswordResetToken[]
  tripAudits            TripAudit[]
  tripEvidences         TripEvidence[]        @relation("TripEvidenceUser")
  createdTrips          Trip[]                @relation("TripCreator")
  updatedTrips           Trip[]                @relation("TripUpdater")
  role                  Role                  @relation(fields: [roleId], references: [id])

  @@map("users")
}

model Role {
  id          String           @id @default(cuid())
  displayName String
  description String?
  isActive    Boolean          @default(true)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  name        RoleName         @unique
  permissions RolePermission[]
  users       User[]

  @@map("roles")
}

model Permission {
  id          String           @id @default(cuid())
  name        String           @unique
  resource    String
  description String?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  action      PermissionAction
  roles       RolePermission[]

  @@map("permissions")
}

model RolePermission {
  id           String     @id @default(cuid())
  roleId       String
  permissionId String
  createdAt    DateTime   @default(now())
  permission   Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)
  role         Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@unique([roleId, permissionId])
  @@map("role_permissions")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
  @@index([expiresAt])
  @@map("password_reset_tokens")
}

model Owner {
  id               String    @id @default(cuid())
  document         String    @unique
  firstName        String
  lastName         String
  isActive         Boolean   @default(true)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  bankAccount      String?
  bankEntity       String?
  companyName      String?
  contact          String?
  email            String?
  nit              String?   @unique
  phone            String?
  vehicles         Vehicle[]
  providedVehicles Vehicle[] @relation("VehicleProvider")

  @@map("owners")
}

model Vehicle {
  id            String         @id @default(cuid())
  plate         String         @unique
  brand         String
  model         String
  type          String
  status        String         @default("active")
  driver        String?
  isActive      Boolean        @default(true)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  ownerId       String?
  capacityM3    Decimal?       @db.Decimal(10, 2)
  capacityTons  Decimal?       @db.Decimal(10, 2)
  ownershipType OwnershipType  @default(OWNED)
  providerId    String?
  ratePerTrip   Decimal?       @db.Decimal(12, 2)
  fuelPurchases FuelPurchase[]
  trips         Trip[]
  owner         Owner?         @relation(fields: [ownerId], references: [id])
  provider      Owner?         @relation("VehicleProvider", fields: [providerId], references: [id])

  @@index([ownershipType, isActive])
  @@map("vehicles")
}

model SiigoCredentials {
  id        String   @id @default(cuid())
  email     String
  accessKey String
  platform  String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("siigo_credentials")
}

model SiigoWarehouse {
  id           Int      @id
  name         String
  active       Boolean
  hasMovements Boolean
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("siigo_warehouses")
}

model SiigoCostCenter {
  id        Int      @id
  code      String
  name      String
  active    Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("siigo_cost_centers")
}

model FuelPurchase {
  id        String   @id @default(cuid())
  date      DateTime @db.Date
  vehicleId String
  quantity  Float
  total     Decimal  @db.Decimal(12, 2)
  provider  String
  state     Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  receipt   String?
  vehicle   Vehicle  @relation(fields: [vehicleId], references: [id], onDelete: Cascade)

  @@map("fuel_purchases")
}

model FlypassData {
  id              String   @id @default(cuid())
  cufe            String   @unique
  status          String
  documentType    String
  creationDate    DateTime
  documentNumber  String
  relatedDocument String?
  costCenter      String?
  licensePlate    String
  tollName        String
  vehicleCategory String
  passageDate     DateTime
  transactionId   String
  subtotal        Decimal  @db.Decimal(12, 2)
  tax             Decimal? @db.Decimal(12, 2)
  total           Decimal  @db.Decimal(12, 2)
  tascode         String
  description     String
  companyNit      String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  accounted       Boolean  @default(false)

  @@map("flypass_data")
}

model SiigoAccountsPayable {
  id                     String                        @id @default(cuid())
  prefix                 String
  consecutive            BigInt
  quote                  Int
  dueDate                DateTime                      @db.Date
  balance                Decimal                       @db.Decimal(15, 2)
  providerIdentification String
  providerBranchOffice   Int
  providerName           String
  costCenterName         String
  currencyCode           String
  currencyBalance        Decimal                       @db.Decimal(15, 2)
  createdAt              DateTime                      @default(now())
  updatedAt              DateTime                      @updatedAt
  generatedRequestId     String
  costCenterCode         Int
  approved               Boolean                       @default(false)
  paid                   Boolean                       @default(false)
  paymentValue           Decimal?                      @db.Decimal(15, 2)
  generatedRequest       SiigoAccountsPayableGenerated @relation(fields: [generatedRequestId], references: [id], onDelete: Cascade)

  @@map("siigo_accounts_payable")
}

model SiigoAccountsPayableGenerated {
  id               String                 @id @default(cuid())
  requestDate      DateTime               @default(now())
  endpoint         String
  page             Int
  pageSize         Int
  totalResults     Int
  recordsProcessed Int
  status           String
  errorMessage     String?
  duration         Int?
  userAgent        String?
  ipAddress        String?
  createdAt        DateTime               @default(now())
  updatedAt        DateTime               @updatedAt
  state            String                 @default("pending")
  accountsPayable  SiigoAccountsPayable[]

  @@map("siigo_accounts_payable_generated")
}

model Client {
  id             String   @id @default(cuid())
  identification String   @unique
  name           String
  address        String?
  email          String?
  phone          String?
  isActive       Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  projects       Project[]

  @@index([identification])
  @@index([isActive])
  @@map("clients")
}

model Project {
  id             String                 @id @default(cuid())
  clientId       String
  name           String
  address        String?
  isActive       Boolean                @default(true)
  startDate      DateTime               @db.Date
  endDate        DateTime?              @db.Date
  createdAt      DateTime               @default(now())
  updatedAt      DateTime               @updatedAt
  materialPrices ProjectMaterialPrice[]
  client         Client                 @relation(fields: [clientId], references: [id], onDelete: Cascade)
  trips          Trip[]

  @@index([clientId, isActive])
  @@map("projects")
}

model Material {
  id            String                 @id @default(cuid())
  name          String
  type          MaterialType
  unitOfMeasure String
  weightPerUnit Decimal?               @db.Decimal(10, 3)
  description   String?
  isActive      Boolean                @default(true)
  createdAt     DateTime               @default(now())
  updatedAt     DateTime               @updatedAt
  projectPrices ProjectMaterialPrice[]
  trips         Trip[]

  @@map("materials")
}

model ProjectMaterialPrice {
  id              String    @id @default(cuid())
  projectId       String
  materialId      String
  salePrice       Decimal   @db.Decimal(12, 2)
  outsourcedPrice Decimal   @db.Decimal(12, 2)
  startDate       DateTime  @db.Date
  endDate         DateTime? @db.Date
  isActive        Boolean   @default(true)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  material        Material  @relation(fields: [materialId], references: [id], onDelete: Cascade)
  project         Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([projectId, materialId, startDate])
  @@index([projectId, materialId, isActive])
  @@map("project_material_prices")
}

model Driver {
  id             String           @id @default(cuid())
  userId         String           @unique
  name           String
  identification String           @unique
  license        String
  phone          String?
  isActive       Boolean          @default(true)
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  advances       Advance[]
  documents      DriverDocument[]
  user           User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  trips          Trip[]

  @@index([isActive])
  @@map("drivers")
}

model DriverDocument {
  id             String       @id @default(cuid())
  driverId       String
  documentType   DocumentType
  documentNumber String
  issueDate      DateTime     @db.Date
  expirationDate DateTime     @db.Date
  fileUrl        String?
  isActive       Boolean      @default(true)
  isAlerted      Boolean      @default(false)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  driver         Driver       @relation(fields: [driverId], references: [id], onDelete: Cascade)

  @@index([driverId, expirationDate, isActive])
  @@map("driver_documents")
}

model Trip {
  id                    String         @id @default(cuid())
  materialId           String
  projectId            String
  date                 DateTime       @db.Date
  driverId             String
  vehicleId            String
  incomingReceiptNumber String?
  outcomingReceiptNumber String?
  quantity             Decimal        @db.Decimal(12, 3)
  measure              MeasureType
  salePrice            Decimal        @default(0) @db.Decimal(12, 2)
  outsourcedPrice      Decimal        @default(0) @db.Decimal(12, 2)
  invoiceId            String?
  isApproved           Boolean        @default(false)
  approvedAt           DateTime?
  observation          String?
  createdAt            DateTime       @default(now())
  updatedAt            DateTime       @updatedAt
  createdBy            String
  updatedBy            String?
  material             Material       @relation(fields: [materialId], references: [id])
  project              Project        @relation(fields: [projectId], references: [id])
  driver               Driver         @relation(fields: [driverId], references: [id], onDelete: Cascade)
  vehicle              Vehicle        @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  invoice              Invoice?       @relation(fields: [invoiceId], references: [id])
  creator              User           @relation("TripCreator", fields: [createdBy], references: [id])
  updater              User?          @relation("TripUpdater", fields: [updatedBy], references: [id])
  evidences            TripEvidence[]
  audits               TripAudit[]

  @@index([projectId, date])
  @@index([driverId, date])
  @@index([materialId])
  @@index([isApproved])
  @@map("trips")
}

model TripEvidence {
  id               String       @id @default(cuid())
  tripId           String
  photoUrl         String
  description      String?
  latitude         Decimal?     @db.Decimal(10, 8)
  longitude        Decimal?     @db.Decimal(11, 8)
  dateTime         DateTime
  uploadedByUserId String
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
  trip             Trip         @relation(fields: [tripId], references: [id], onDelete: Cascade)
  uploadedByUser   User         @relation("TripEvidenceUser", fields: [uploadedByUserId], references: [id], onDelete: Cascade)

  @@index([tripId])
  @@map("trip_evidences")
}

model Advance {
  id           String               @id @default(cuid())
  driverId     String
  amount       Decimal              @db.Decimal(12, 2)
  period       String
  advanceDate  DateTime             @db.Date
  status       AdvanceStatus        @default(PENDING)
  createdAt    DateTime             @default(now())
  updatedAt    DateTime             @updatedAt
  legalization AdvanceLegalization?
  driver       Driver               @relation(fields: [driverId], references: [id], onDelete: Cascade)

  @@map("advances")
}


model AdvanceLegalization {
  id               String             @id @default(cuid())
  advanceId        String             @unique
  totalSpent       Decimal            @db.Decimal(12, 2)
  balanceInFavor   Decimal            @db.Decimal(12, 2)
  balanceInDebt    Decimal            @db.Decimal(12, 2)
  legalizationDate DateTime           @db.Date
  isApproved       Boolean            @default(false)
  approvedByUserId String?
  approvalDate     DateTime?
  status           LegalizationStatus @default(PENDING)
  observations     String?
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  advance          Advance            @relation(fields: [advanceId], references: [id], onDelete: Cascade)
  approvedByUser   User?              @relation("AdvanceLegalizationApprover", fields: [approvedByUserId], references: [id])

  @@map("advance_legalizations")
}

model Alert {
  id               String        @id @default(cuid())
  alertType        AlertType
  referenceTable   String
  referenceId      String
  message          String
  priority         AlertPriority
  status           AlertStatus   @default(PENDING)
  creationDate     DateTime      @default(now())
  attendedByUserId String?
  attendanceDate   DateTime?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  attendedByUser   User?         @relation("AlertAttendee", fields: [attendedByUserId], references: [id])

  @@index([status, priority])
  @@index([referenceTable, referenceId])
  @@map("alerts")
}

model TripAudit {
  id           String   @id @default(cuid())
  tripId       String
  userId       String
  action       String
  previousData Json?
  newData      Json?
  ipAddress    String?
  userAgent    String?
  timestamp    DateTime @default(now())
  createdAt    DateTime @default(now())
  trip         Trip     @relation(fields: [tripId], references: [id], onDelete: Cascade)
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("trip_audits")
}

enum RoleName {
  SUPER_ADMIN
  ADMIN
  ACCOUNTING
  TREASURY
  LOGISTICS
  BILLING
  VIEWER
  DRIVER
  CLIENT
  WAREHOUSE
}

enum PermissionAction {
  VIEW
  CREATE
  EDIT
  DELETE
  MANAGE
}

enum OwnershipType {
  OWNED
  OUTSOURCED
}

enum MaterialType {
  STOCKED
  NON_STOCKED
}

enum MeasureType {
  METROS_CUBICOS
  TONELADAS
}

enum DocumentType {
  LICENSE
  MEDICAL_EXAM
  TRAINING
  CERTIFICATE
  SOAT
  TECHNICAL_REVIEW
}


enum LegalizationStatus {
  PENDING
  APPROVED
  REJECTED
}

enum AdvanceStatus {
  PENDING
  PARTIALLY_LEGALIZED
  LEGALIZED
}

enum AlertType {
  TRIP_NOT_STARTED
  DOCUMENT_EXPIRING
  DOCUMENT_EXPIRED
  EXCESSIVE_EXPENSE
  TRIP_DELAYED
  LEGALIZATION_PENDING
  MATERIAL_DIFFERENCE
}

enum AlertPriority {
  HIGH
  MEDIUM
  LOW
}

enum AlertStatus {
  PENDING
  ATTENDED
  IGNORED
}
