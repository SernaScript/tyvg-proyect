generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Company {
  id        String    @id @default(cuid())
  nit       String    @unique
  name      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  invoices  Invoice[]

  @@map("companies")
}

model Invoice {
  id            String    @id @default(cuid())
  invoiceNumber String
  documentType  String
  issueDate     DateTime
  dueDate       DateTime?
  subtotal      Decimal   @db.Decimal(12, 2)
  tax           Decimal   @db.Decimal(12, 2)
  total         Decimal   @db.Decimal(12, 2)
  status        String    @default("pending")
  supplierName  String?
  supplierNit   String?
  description   String?
  observations  String?
  scrapedAt     DateTime  @default(now())
  sourceFile    String?
  companyId     String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  company       Company   @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@map("invoices")
}

model ScrapingLog {
  id               String   @id @default(cuid())
  companyNit       String
  startDate        DateTime
  endDate          DateTime
  status           String
  message          String?
  fileName         String?
  recordsFound     Int      @default(0)
  recordsProcessed Int      @default(0)
  recordsErrors    Int      @default(0)
  duration         Int?
  errorDetails     String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@map("scraping_logs")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String?
  password  String
  isActive  Boolean   @default(true)
  lastLogin DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  roleId    String
  sessions  Session[]
  role      Role      @relation(fields: [roleId], references: [id])

  @@map("users")
}

model Role {
  id          String           @id @default(cuid())
  displayName String
  description String?
  isActive    Boolean          @default(true)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  name        RoleName         @unique
  permissions RolePermission[]
  users       User[]

  @@map("roles")
}

model Permission {
  id          String           @id @default(cuid())
  name        String           @unique
  resource    String
  description String?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  action      PermissionAction
  roles       RolePermission[]

  @@map("permissions")
}

model RolePermission {
  id           String     @id @default(cuid())
  roleId       String
  permissionId String
  createdAt    DateTime   @default(now())
  permission   Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)
  role         Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@unique([roleId, permissionId])
  @@map("role_permissions")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Owner {
  id        String    @id @default(cuid())
  document  String    @unique
  firstName String
  lastName  String
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  vehicles  Vehicle[]

  @@map("owners")
}

model Vehicle {
  id            String         @id @default(cuid())
  plate         String         @unique
  brand         String
  model         String
  type          String
  status        String         @default("active")
  driver        String?
  isActive      Boolean        @default(true)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  ownerId       String?
  fuelPurchases FuelPurchase[]
  owner         Owner?         @relation(fields: [ownerId], references: [id])

  @@map("vehicles")
}

model SiigoCredentials {
  id        String   @id @default(cuid())
  email     String
  accessKey String
  platform  String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("siigo_credentials")
}

model SiigoWarehouse {
  id           Int      @id
  name         String
  active       Boolean
  hasMovements Boolean
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("siigo_warehouses")
}

model SiigoCostCenter {
  id        Int      @id
  code      String
  name      String
  active    Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("siigo_cost_centers")
}

model FuelPurchase {
  id        String   @id @default(cuid())
  date      DateTime @db.Date
  vehicleId String
  quantity  Float
  total     Decimal  @db.Decimal(12, 2)
  provider  String
  state     Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  receipt   String?
  vehicle   Vehicle  @relation(fields: [vehicleId], references: [id], onDelete: Cascade)

  @@map("fuel_purchases")
}

model FlypassData {
  id              String   @id @default(cuid())
  cufe            String   @unique
  status          String
  documentType    String
  creationDate    DateTime
  documentNumber  String
  relatedDocument String?
  costCenter      String?
  licensePlate    String
  tollName        String
  vehicleCategory String
  passageDate     DateTime
  transactionId   String
  subtotal        Decimal  @db.Decimal(12, 2)
  tax             Decimal? @db.Decimal(12, 2)
  total           Decimal  @db.Decimal(12, 2)
  tascode         String
  description     String
  companyNit      String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  accounted       Boolean  @default(false)

  @@map("flypass_data")
}

model SiigoAccountsPayable {
  id                     String                        @id @default(cuid())
  prefix                 String
  consecutive            BigInt
  quote                  Int
  dueDate                DateTime                      @db.Date
  balance                Decimal                       @db.Decimal(15, 2)
  providerIdentification String
  providerBranchOffice   Int
  providerName           String
  costCenterCode         Int
  costCenterName         String
  currencyCode           String
  currencyBalance        Decimal                       @db.Decimal(15, 2)
  paymentValue           Decimal?                      @db.Decimal(15, 2)
  approved               Boolean                       @default(false)
  paid                   Boolean                       @default(false)
  createdAt              DateTime                      @default(now())
  updatedAt              DateTime                      @updatedAt
  generatedRequestId     String
  generatedRequest       SiigoAccountsPayableGenerated @relation(fields: [generatedRequestId], references: [id], onDelete: Cascade)

  @@map("siigo_accounts_payable")
}

model SiigoAccountsPayableGenerated {
  id               String                 @id @default(cuid())
  requestDate      DateTime               @default(now())
  endpoint         String
  page             Int
  pageSize         Int
  totalResults     Int
  recordsProcessed Int
  status           String
  errorMessage     String?
  duration         Int?
  userAgent        String?
  ipAddress        String?
  createdAt        DateTime               @default(now())
  updatedAt        DateTime               @updatedAt
  accountsPayable  SiigoAccountsPayable[]

  @@map("siigo_accounts_payable_generated")
}

enum RoleName {
  SUPER_ADMIN
  ADMIN
  ACCOUNTING
  TREASURY
  LOGISTICS
  BILLING
  VIEWER
}

enum PermissionAction {
  VIEW
  CREATE
  EDIT
  DELETE
  MANAGE
}
