generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Company {
  id        String    @id @default(cuid())
  nit       String    @unique
  name      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  invoices  Invoice[]

  @@map("companies")
}

model Invoice {
  id            String    @id @default(cuid())
  invoiceNumber String
  documentType  String
  issueDate     DateTime
  dueDate       DateTime?
  subtotal      Decimal   @db.Decimal(12, 2)
  tax           Decimal   @db.Decimal(12, 2)
  total         Decimal   @db.Decimal(12, 2)
  status        String    @default("pending")
  supplierName  String?
  supplierNit   String?
  description   String?
  observations  String?
  scrapedAt     DateTime  @default(now())
  sourceFile    String?
  companyId     String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  company       Company   @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@map("invoices")
}

model ScrapingLog {
  id               String   @id @default(cuid())
  companyNit       String
  startDate        DateTime
  endDate          DateTime
  status           String
  message          String?
  fileName         String?
  recordsFound     Int      @default(0)
  recordsProcessed Int      @default(0)
  recordsErrors    Int      @default(0)
  duration         Int?
  errorDetails     String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@map("scraping_logs")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String?
  password  String
  isActive  Boolean   @default(true)
  lastLogin DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  roleId    String
  sessions  Session[]
  role      Role      @relation(fields: [roleId], references: [id])

  @@map("users")
}

model Role {
  id          String           @id @default(cuid())
  displayName String
  description String?
  isActive    Boolean          @default(true)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  name        RoleName         @unique
  permissions RolePermission[]
  users       User[]

  @@map("roles")
}

model Permission {
  id          String           @id @default(cuid())
  name        String           @unique
  resource    String
  description String?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  action      PermissionAction
  roles       RolePermission[]

  @@map("permissions")
}

model RolePermission {
  id           String     @id @default(cuid())
  roleId       String
  permissionId String
  createdAt    DateTime   @default(now())
  permission   Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)
  role         Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@unique([roleId, permissionId])
  @@map("role_permissions")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

enum RoleName {
  SUPER_ADMIN
  ADMIN
  ACCOUNTING
  TREASURY
  LOGISTICS
  BILLING
  VIEWER
}

enum PermissionAction {
  VIEW
  CREATE
  EDIT
  DELETE
  MANAGE
}

model Owner {
  id        String    @id @default(cuid())
  document  String    @unique // Número de documento (solo números)
  firstName String    // Nombre
  lastName  String    // Apellido
  isActive  Boolean   @default(true) // Estado activo/inactivo
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  vehicles  Vehicle[] // Relación con vehículos

  @@map("owners")
}

model Vehicle {
  id              String    @id @default(cuid())
  plate           String    @unique // Placa del vehículo
  brand           String    // Marca
  model           String    // Modelo
  year            Int       // Año
  type            String    // Tipo de vehículo (Camión, Van, Pickup, etc.)
  status          String    @default("active") // Estado del vehículo
  driver          String?   // Conductor asignado
  location        String?   // Ubicación actual
  odometer        Int       @default(0) // Odómetro en km
  fuelType        String    // Tipo de combustible
  lastMaintenance DateTime? // Último mantenimiento
  nextMaintenance DateTime? // Próximo mantenimiento
  isActive        Boolean   @default(true) // Estado activo/inactivo
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  ownerId         String?   // ID del propietario
  owner           Owner?    @relation(fields: [ownerId], references: [id])

  @@map("vehicles")
}
